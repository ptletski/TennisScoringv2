<Window x:Class="Scoreboard.PlayerNameEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Name Entry" Height="277" Width="251" Name="PlayerNameEntryWnd">
    <Grid Width="223" Height="237">
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,32,0,0" Name="nameEntryPrompt" Text="PLAYER X NAME ENTRY PROMPT" VerticalAlignment="Top" Width="224" />
        <Label Content="First Name" Height="28" HorizontalAlignment="Left" Margin="12,61,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Last Name" Height="28" HorizontalAlignment="Left" Margin="13,112,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="13,83,0,0" Name="firstNameTxt" VerticalAlignment="Top" Width="197" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="13,135,0,0" Name="lastNameTxt" VerticalAlignment="Top" Width="197" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="13,192,0,0" Name="okBtn" VerticalAlignment="Top" Width="75" Click="okBtn_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="135,192,0,0" Name="cancelBtn" VerticalAlignment="Top" Width="75" IsCancel="True" IsDefault="True" Click="cancelBtn_Click" />
    </Grid>
</Window>
